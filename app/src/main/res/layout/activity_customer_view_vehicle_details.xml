<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerViewVehicleDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_back"/>

            <TextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/medium"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout1"
            android:layout_below="@id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="15sp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/medium"
                    android:text="Vehicle Details"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/vehicleQrView"
                    android:layout_width="250sp"
                    android:layout_height="250sp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginHorizontal="15sp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:text="Reg. No : "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtCusVehReg"
                        android:layout_width="0sp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15sp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:text="Brand : "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtCusVehBrand"
                        android:layout_width="0sp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15sp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:text="Model : "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtCusVehModal"
                        android:layout_width="0sp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15sp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:text="Engine No : "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtCusVehEngine"
                        android:layout_width="0sp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15sp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:text="Chassis No : "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtCusVehChassis"
                        android:layout_width="0sp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="2sp"
                        android:layout_gravity="start"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>